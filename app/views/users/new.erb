<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label(:full_name, "Full Name:") %>
    <%= f.text_field(:full_name, class: "form-control") %>
    <p class="error_msg"><%= @user.errors['full_name'][0] if @user.errors.any? %></p>
  </div>
  <div class="form-group">
    <%= f.label(:username, "Desired Username:") %>
    <%= f.text_field(:username, class: "form-control") %>
    <p class="error_msg"><%= @user.errors['username'][0] if @user.errors.any? %></p>
  </div>
  <div class="form-group">
    <%= f.label(:password, "Password:") %>
    <%= f.password_field(:password, class: "form-control") %>
    <p class="error_msg"><%= @user.errors['password'][0] if @user.errors.any? %></p>
  </div>
  <div class="form-group">
    <%= f.label(:password_confirmation, "Password Confirmation:") %>
    <%= f.password_field(:password_confirmation, class: "form-control") %>
    <p class="error_msg hidden password">passwords do not match</p>
  </div>
  <%= f.submit("Register", class: "btn btn-default") %>
<% end %>
